name: Fetch CloudFlare IPv6 (hostmonit)

on:
  schedule:
    # 每天 08:00 UTC（北京时间 16:00）
    - cron: '0 8 * * *'
  workflow_dispatch:

jobs:
  crawl:
    runs-on: ubuntu-latest
    permissions:
      contents: write   # 允许写仓库

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install deps
        run: npm ci --silent || npm install --silent

      - name: Run Puppeteer script
        run: node fetch-hostmonit-ipv6.js > ipv6.txt
        env:
          TZ: Asia/Shanghai

      - name: Commit & push
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add ipv6.txt
          git diff --cached --quiet || (git commit -m "chore: update Cloudflare IPv6 ranges [skip ci]" && git push)
